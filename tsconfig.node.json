{
  "compilerOptions": {
    "moduleResolution": "bundler",  // Keep this since you're using Vite
    "target": "ES2022",
    "jsx": "react-jsx",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",  // Include the entire source folder
    "vite.config.ts"  // Include your Vite config if necessary
  ]
}
